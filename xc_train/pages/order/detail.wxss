.ODCont2 {
    padding: 0 30rpx;
    margin-bottom: 5rpx;
}

.ODCont2 .listBox {
    padding: 30rpx 0;
    border-bottom: 1px solid #f7f7f7;
}

.ODCont2 .listBox:last-child {
    border-bottom: none;
}

.ODCont2 .listBox .imgBlock {
    width: 160rpx;
    height: 140rpx;
    margin-right: 20rpx;
}

.ODCont2 .listBox .text {
    overflow: hidden;
}

.ODCont2 .listBox .text .h1 {
    line-height: 1.2;
    font-size: 26rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 20rpx;
}

.ODCont2 .listBox .text .h2 {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 30rpx;
}

.ODCont2 .listBox .text .h2 .flex-flex1 {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-right: 20rpx;
}

.ODCont2 .listBox .text .p {
    font-size: 18rpx;
    color: #77D4C0;
}

.ODCont2 .listBox .text .sp1 {
    font-size: 28rpx;
}

.ODTitle {
    font-size: 22rpx;
    color: #CCCCCC;
    padding: 30rpx;
}

.ODCont4 .listBox {
    padding: 30rpx;
    border-bottom: 1px solid #f7f7f7;
    font-size: 26rpx;
    line-height: 1.2;
}

.ODCont4 .listBox .name {
    color: #AAAAAA;
    margin-right: 40rpx;
    overflow: hidden;
}

.ODCont4 .listBox .text {
    color: #77D4C0;
