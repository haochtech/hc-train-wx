page {
    background: #fff;
}

.nav {
    height: 90rpx;
    background: #fff;
    white-space: nowrap;
    position: fixed;
    left: 0;
    top: 0;
    min-width: 100%;
    z-index: 999;
    border-bottom: #ddd 2rpx solid;
}

.nav view {
    min-width: 14%;
    display: inline-block;
    line-height: 90rpx;
    height: 90rpx;
    box-sizing: border-box;
    text-align: center;
    margin: 0 3%;
}

.nav view.curr {
    border-bottom: #5fccec 4rpx solid;
    color: #5fccec;
}

.nav_block {
    height: 92rpx;
}

.list {
    padding: 32rpx 40rpx;
}

.list .item {
    border-radius: 30rpx;
    position: relative;
}

.list .item+.item {
    margin-top: 32rpx;
}

.list .item .simg {
    width: 100%;
    height: 360rpx;
    border-radius: 30rpx;
}

.list .item .title {
    position: absolute;
    bottom: 0;
    left: 0;
    background: rgba(0,0,0,0.7);
    color: #fff;
    width: 100%;
    border-radius: 0 0 30rpx 30rpx;
    display: flex;
    align-items: center;
    line-height: 72rpx;
    box-sizing: border-box;
    padding: 0 16rpx;
}

.list .item .title .sp1 {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .title .sp3 {
    color: #FFD201;
    margin-left: 10rpx;
}

.list .item .tip {
    position: absolute;
    top: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.7);
    color: #fff;
    border-radius: 0 30rpx 0 30rpx;
    width: 180rpx;
    height: 72rpx;
    box-sizing: border-box;
    padding: 0 24rpx;
}

.list .item .tip>image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.list .item .tip>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    text-align: center;
}