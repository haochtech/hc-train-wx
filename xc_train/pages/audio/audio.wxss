.title {
    padding: 20rpx;
    background: #fff;
    text-align: center;
}

.title>view:nth-child(1) {
    font-size: 4vw;
    line-height: 6vw;
}

.banner {
    padding: 0 40rpx;
    background: #fff;
}

.banner .simg {
    width: 100%;
    border-radius: 30rpx;
    position: relative;
}

.banner .simg>image {
    width: 100%;
    border-radius: 30rpx;
}

.banner .tip {
    position: absolute;
    bottom: 0;
    right: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    background: rgba(0,0,0,0.7);
    color: #fff;
    border-radius: 30rpx 0 30rpx 0;
    width: 180rpx;
    height: 72rpx;
    box-sizing: border-box;
    padding: 0 24rpx;
}

.banner .tip>image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.banner .tip>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    flex: 1;
    text-align: center;
}

.banner .share {
    padding: 20rpx 0;
    display: flex;
    align-items: center;
    justify-content: flex-end;
    position: relative;
}

.banner .share image+image {
    margin-left: 20rpx;
}

.banner .share .btn {
    position: absolute;
    width: 50rpx;
    height: 50rpx;
    top: 20rpx;
    right: 0;
    opacity: 0;
}

.slider {
    padding: 20rpx 0;
    background: #fff;
}

.slider .sliderP {
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}

.slider .sliderP>view:nth-child(1) {
    flex: 1;
}

.slider .sliderC {
    display: flex;
    justify-content: center;
    align-items: center;
    margin-top: 20rpx;
    position: relative;
    min-height: 120rpx;
}

.slider .sliderC .sp1 {
    width: 60rpx;
}

.slider .sliderC .sp2 {
    width: 120rpx;
    margin: 0 80rpx;
}

.slider .sliderList {
    position: absolute;
    bottom: 0;
    left: 30rpx;
    text-align: center;
}

.slider .sliderList>image {
    width: 30rpx;
    height: 30rpx;
    margin: 0 auto;
}

.slider .sliderList>view {
    font-size: 3vw;
}

.audio {
    padding: 20rpx;
    display: flex;
    align-items: center;
    margin-top: 6rpx;
    background: #fff;
}

.audio .simg {
    width: 180rpx;
    height: 100rpx;
}

.audio .itemR {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    padding: 0 20rpx;
}

.audio .itemR>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.audio .itemC {
    display: flex;
    align-items: center;
}

.audio .itemC>image {
    width: 30rpx;
    height: 30rpx;
}

.audio .itemC.curr {
    border: #ddd 2rpx solid;
    width: 120rpx;
    border-radius: 50rpx;
    justify-content: center;
    height: 50rpx;
}

.audio .itemC.curr>image {
    margin-right: 10rpx;
}

.list {
    margin-top: 6rpx;
    background: #fff;
    padding-bottom: 40rpx;
}

.list .listT {
    padding: 40rpx 0;
    position: relative;
}

.list .listT .line {
    width: 400rpx;
    background: #EEEEEE;
    height: 2rpx;
    margin: 0 auto;
}

.list .listT .listTT {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    background: #fff;
    padding: 0 30rpx;
}

.list .item {
    padding: 20rpx 40rpx;
    display: flex;
    border-bottom: #ddd 2rpx solid;
}

.list .item>image {
    width: 100rpx;
    height: 100rpx;
    border: #ddd 4rpx solid;
    border-radius: 100%;
    box-sizing: border-box;
}

.list .item .item_r {
    width: 540rpx;
    margin-left: 30rpx;
}

.list .item .item_r .name {
    display: flex;
}

.list .item .item_r .name>view:nth-child(1) {
    flex: 1;
    width: 320rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .item_r .content {
    color: #888888;
    margin-top: 10rpx;
}

.yin {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: rgba(0,0,0,0.5);
    z-index: 100;
}

.yin .menu {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    border-radius: 30rpx 30rpx 0 0;
}

.yin .menu .menu_list {
    height: 600rpx;
    overflow: scroll;
    padding: 20rpx 0;
}

.yin .menu .menu_list>view {
    padding: 20rpx 40rpx;
}

.yin .menu .menu_btn {
    line-height: 90rpx;
    text-align: center;
    font-size: 4.5vw;
    border-top: #EEEEEE 2rpx solid;
}

.shade {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 1000;
}

.hbLayer {
    width: 586rpx;
    position: fixed;
    left: 50%;
    margin-left: -293rpx;
    top: 50%;
    transform: translateY(-50%);
}

.hbLayer .closeBtn {
    text-align: right;
    margin-bottom: 30rpx;
}

.hbLayer .closeBtn image {
    width: 40rpx;
    height: 40rpx;
    display: inline-block;
}

.hbLayer .hbimg {
    margin-bottom: 20rpx;
    width: 100%;
}

.hbLayer .dlBtn {
    height: 78rpx;
    line-height: 78rpx;
    text-align: center;
    font-size: 26rpx;
    color: #fff;
    background-color: #77d4c0;
    border-radius: 10rpx;
}

.hbLayer .dlBtn image {
    width: 26rpx;
    height: 26rpx;
    margin-right: 10rpx;
    vertical-align: baseline;
    display: inline-block;
}

.flex-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.flex-wrap {
    -webkit-box-flex-wrap: wrap;
    flex-wrap: wrap;
}

.flex-alignC {
    -webkit-box-align: center;
    align-items: center;
    -ms-flex-align: center;
}

.flex-flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-flex2 {
    -webkit-box-flex: 2;
    flex: 2;
}