.banner {
    width: 100%;
    position: relative;
}

.banner .simg {
    width: 100%;
    height: 100%;
}

.banner .tip {
    position: absolute;
    left: 0;
    bottom: 0;
    background: rgba(0,0,0,0.7);
    width: 100%;
    color: #fff;
    box-sizing: border-box;
    padding: 0 20rpx;
    line-height: 72rpx;
    display: flex;
    align-items: center;
}

.banner .tip .sp1 {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.banner .tip .sp2 {
    color: #FFD201;
}

.banner .tip .sp3 {
    display: flex;
    align-items: center;
    margin-left: 20rpx;
}

.banner .tip .sp3>image {
    width: 30rpx;
    height: 30rpx;
    margin-right: 10rpx;
}

.list .nav {
    display: flex;
    background: #fff;
    border-bottom: #ddd 2rpx solid;
}

.list .nav>view {
    flex: 1;
    text-align: center;
    padding: 20rpx 0;
    box-sizing: border-box;
    margin: 0 40rpx;
}

.list .nav>view.curr {
    color: #5fccec;
    border-bottom: #5fccec 4rpx solid;
}

.list .detail {
    background: #fff;
    padding: 40rpx 10rpx;
}

.tui {
    background: #fff;
}

.tui .item {
    padding: 20rpx 48rpx;
    display: flex;
    align-items: center;
}

.tui .item+.item {
    border-top: #ddd 2rpx solid;
}

.tui .item .sp1 {
    flex: 1;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.tui .item .sp2 {
    width: 30rpx;
    height: 30rpx;
    margin: 0 20rpx;
}

.tui .item .btn {
    width: 120rpx;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
    color: #fff;
    border-radius: 50rpx;
}

.discuss {
    background: #fff;
}

.discuss .ping {
    display: flex;
    padding: 20rpx 84rpx;
    border-bottom: #ddd 2rpx solid;
    align-items: center;
}

.discuss .ping>input {
    border: #ddd 2rpx solid;
    flex: 1;
    border-radius: 10rpx 0 0 10rpx;
}

.discuss .ping .ping_btn {
    width: 100rpx;
    text-align: center;
    color: #fff;
    background: #5fcceb;
    height: 1.4rem;
    line-height: 1.4rem;
    border-radius: 0 10rpx 10rpx 0;
    border: #ddd 2rpx solid;
}

.discuss .item {
    padding: 20rpx 40rpx;
    display: flex;
}

.discuss .item+.item {
    border-top: #ddd 2rpx solid;
}

.discuss .item>image {
    width: 100rpx;
    height: 100rpx;
    border: #ddd 4rpx solid;
    border-radius: 100%;
    box-sizing: border-box;
}

.discuss .item .item_r {
    width: 540rpx;
    margin-left: 30rpx;
}

.discuss .item .item_r .name {
    display: flex;
}

.discuss .item .item_r .name>view:nth-child(1) {
    flex: 1;
    width: 320rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.discuss .item .item_r .content {
    color: #888888;
    margin-top: 10rpx;
}

.discuss .item .item_r .reply {
    margin-top: 10rpx;
    background: #f7f7f7;
    padding: 20rpx;
    border-radius: 20rpx;
}

.menu {
    position: fixed;
    top: 10vh;
    left: 10%;
    width: 80%;
    background: #fff;
    z-index: 1000;
    box-sizing: border-box;
    padding-bottom: 30rpx;
}

.menu>icon {
    display: flex;
    align-items: center;
    justify-content: center;
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.menu .menu_title {
    padding: 20rpx 0;
    color: #fff;
    background: #aaa;
    text-align: center;
}

.menu .tip {
    margin-top: 80rpx;
    text-align: center;
    color: #999;
}

.menu .btn {
    width: 400rpx;
    height: 80rpx;
    text-align: center;
    line-height: 80rpx;
    margin: 0 auto;
    color: #fff;
    font-size: 4.5vw;
    margin-top: 60rpx;
    border-radius: 80rpx;
}

.list .list_t {
    padding: 20rpx 40rpx;
    background: #fff;
    display: flex;
}

.list .list_t+.list_t {
    border-top: #ddd 2rpx solid;
}

.list .list_t>icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
}

.list .list_t>view:nth-child(2) {
    flex: 1;
    width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .list_btn {
    background: #5fcceb;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    margin-top: 10rpx;
}

.nav_block {
    height: 120rpx;
}

.nav_b {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 99;
    background: #fff;
    display: flex;
    height: 100rpx;
}

.nav_b .nav_l {
    width: 200rpx;
    color: #999;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
}

.nav_b .nav_r {
    flex: 1;
    text-align: center;
    line-height: 100rpx;
    color: #fff;
    font-size: 4.5vw;
}

.shop_box {
    position: fixed;
    width: 80%;
    top: 20%;
    left: 10%;
    z-index: 9999;
    background: #fff;
    text-align: center;
    padding: 40rpx 20rpx;
    border-radius: 20rpx;
    box-sizing: border-box;
}

.shop_box>image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100%;
    border: #ff4c60 4rpx solid;
    display: inline-block;
}

.shop_box>view:nth-child(2) {
    margin-top: 20rpx;
}

.shop_box>input {
    border: #ddd 2rpx solid;
    display: inline-block;
    width: 50vw;
    border-radius: 40rpx;
    margin-top: 20rpx;
    padding: 10rpx 20rpx;
}

.shop_box>.shop_btn {
    background: #31c37c;
    display: inline-block;
    width: 50vw;
    padding: 10rpx 20rpx;
    border-radius: 40rpx;
    margin-top: 20rpx;
    height: 1.4rem;
    line-height: 1.4rem;
    color: #fff;
    border: #31c37c 2rpx solid;
}

.page.theme2 .shop_box>.shop_btn {
    background: #cfa35c;
    border: #cfa35c 2rpx solid;
}

.shop_box>.shop_error {
    font-size: 3.5vw;
    color: #ffad5b;
}

.shop_box .shop_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.btn_block {
    height: 100rpx;
}

.pay_btn {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    color: #fff;
    text-align: center;
    line-height: 90rpx;
}

.customer_service,.footer_block,.footer {
    display: none;
}

.audio_block {
    height: 130rpx;
}

.audio {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 130rpx;
    display: flex;
    align-items: center;
    border-top: #ddd 2rpx solid;
    background: #fff;
    box-sizing: border-box;
    padding: 0 30rpx;
}

.audio .simg {
    width: 160rpx;
    height: 100rpx;
}

.audio .audioC {
    flex: 1;
    padding: 0 40rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.audio .audioC>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.audio .play {
    margin-right: 40rpx;
}