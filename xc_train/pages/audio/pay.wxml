<view class="page">
    <view class="list">
        <view class="item">
            <view class="sp1">课程</view>
            <view class="sp2">{{list.name}}</view>
        </view>
        <view class="item">
            <view class="sp1">集数</view>
            <view class="sp2">预计更新{{list.member}}集(已更新{{list.audio_num}}集)</view>
        </view>
        <view class="item">
            <view class="sp1">价格</view>
            <view class="sp2" style="color:{{theme.color}};">￥{{list.price}}</view>
        </view>
    </view>
    <view bindtap="pay" class="btn" style="background:{{theme.color}};">微信支付</view>
</view>
