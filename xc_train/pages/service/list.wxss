.page .item {
    background: #fff;
}

.page .item+.item {
    margin-top: 10rpx;
}

.page .item>image {
    width: 100%;
    height: 320rpx;
}

.page .item .item_btn {
    padding: 20rpx 30rpx;
}

.page .item .item_btn .item_t {
    display: flex;
    align-items: center;
}

.page .item .item_btn .item_t>view:nth-child(1) {
    flex: 1;
    color: #000;
    width: 560rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.page .item .item_btn .item_t>view:nth-child(2) {
    height: 50rpx;
    width: 140rpx;
    display: flex;
    color: #fff;
    align-items: center;
    justify-content: center;
    background: #5fcceb;
    border-radius: 8rpx;
}

.page .item_btn .item_b {
    display: flex;
    margin-top: 10rpx;
    font-size: 3vw;
}

.page .item_btn .item_b>view:nth-child(1) {
    width: 320rpx;
}

.page .item_btn .item_b>view:nth-child(2),.page .item_btn .item_b>view:nth-child(3) {
    flex: 1;
}

.menu {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    background: #fff;
    z-index: 1000;
    padding: 0 30rpx;
    box-sizing: border-box;
}

.menu .title {
    padding: 20rpx 0;
    text-align: center;
    font-size: 4.5vw;
    color: #5fcceb;
    border-bottom: #ddd 2rpx solid;
}

.menu .menu_item {
    height: 80rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-bottom: #ddd 2rpx solid;
}

.menu .menu_item>input {
    width: 100%;
    text-align: center;
}

.menu .menu_btn {
    height: 70rpx;
    color: #fff;
    background: #5fcceb;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4vw;
    border-radius: 10rpx;
    margin: 20rpx 0;
}

.list {
    padding-top: 10rpx;
}

.list .list_t {
    padding: 20rpx 40rpx;
    background: #fff;
    display: flex;
}

.list .list_t+.list_t {
    border-top: #ddd 2rpx solid;
}

.list .list_t>icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
}

.list .list_t>view:nth-child(2) {
    flex: 1;
    width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .list_btn {
    background: #5fcceb;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    margin-top: 10rpx;
}

.store_page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #f7f7f7;
    z-index: 10000;
    overflow: scroll;
}

.store_page .item+.item {
    margin-top: 10rpx;
}

.store_page .item {
    background: #fff;
}

.store_page .item .item_t {
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.store_page .item .item_t>image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.store_page .item .item_t .item_l {
    flex: 1;
    width: 450rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.store_page .item .item_t .item_l>view {
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    line-height: 4vw;
}

.store_page .item .item_t .item_l>view:nth-child(1) {
    color: #333;
    font-size: 4vw;
    margin-bottom: 10rpx;
}

.store_page .item .item_t .item_r {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    line-height: 4vw;
    color: #999;
    border-left: #f3a7bf 2rpx dashed;
    padding-left: 20rpx;
    width: 100rpx;
    box-sizing: border-box;
}