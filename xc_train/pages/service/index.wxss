.nav {
    height: 90rpx;
    background: #fff;
    white-space: nowrap;
    position: fixed;
    left: 0;
    top: 0;
    min-width: 100%;
}

.nav view {
    min-width: 14%;
    display: inline-block;
    line-height: 90rpx;
    height: 90rpx;
    box-sizing: border-box;
    text-align: center;
    margin: 0 3%;
}

.nav view.curr {
    border-bottom: #5fccec 4rpx solid;
    color: #5fccec;
}

.nav_block {
    height: 90rpx;
}

.list {
    margin-top: 10rpx;
    background: #fff;
}

.list .item {
    padding: 20rpx;
    display: flex;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item>image {
    width: 330rpx;
    height: 130rpx;
}

.list .item .item_r {
    width: 360rpx;
    margin-left: 20rpx;
}

.list .item .item_r .item_t {
    display: flex;
    color: #aaa;
    margin-top: 4rpx;
}

.list .item .item_r .item_t>view:nth-child(1) {
    flex: 1;
}

.list .item .item_btn {
    background: #5fccec;
    width: 120rpx;
    height: 40rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 8rpx;
}