.top {
    width: 100%;
}

.top>image {
    width: 100%;
}

.sign {
    padding-top: 10rpx;
}

.sign .sign_item {
    background: #fff;
    padding: 0 20rpx;
    height: 80rpx;
    display: flex;
    align-items: center;
}

.sign .sign_item+.sign_item {
    border-top: #ddd 2rpx solid;
}

.sign .sign_item>view:nth-child(1) {
    width: 120rpx;
}

.sign .sign_item>input {
    text-align: center;
    flex: 1;
}

.sign .sign_btn {
    background: #5fcceb;
    line-height: 80rpx;
    text-align: center;
    color: #fff;
    margin-top: 10rpx;
    border-radius: 0;
    border: none;
    font-size: 3.5vw;
}

.sign .sign_btn::after {
    content: '';
    border: none;
    border-radius: 0;
}

.menu {
    position: fixed;
    bottom: 0;
    left: 0;
    width: 100%;
    z-index: 1000;
    background: #fff;
}

.menu .menu_top {
    padding: 20rpx 30rpx;
    text-align: center;
    position: relative;
}

.menu .menu_top .menu_close {
    position: absolute;
    left: 30rpx;
    font-size: 4.5vw;
    top: 50%;
    transform: translate(0,-50%);
}

.menu .menu_list {
    height: 40vh;
    margin-top: 30rpx;
    padding: 0 30rpx;
}

.menu .menu_list .item {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: #ddd 2rpx solid;
}

.menu .menu_list .item>icon {
    display: flex;
    align-items: center;
    margin-right: 10rpx;
}

.menu .menu_btn {
    height: 100rpx;
    color: #fff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 4.5vw;
    border-radius: 0;
    border: none;
}

.menu .menu_btn::after {
    content: '';
    border-radius: 0;
    border: none;
}

.menu .item_c {
    display: flex;
    align-items: center;
    padding: 20rpx 0;
    border-bottom: #ddd 2rpx solid;
    position: relative;
}

.menu .item_c .tip {
    position: absolute;
    bottom: 0;
    font-size: 2.5vw;
    left: 70rpx;
}

.menu .item_c>view:nth-child(2) {
    flex: 1;
    margin-left: 20rpx;
}

.menu .item_c>icon {
    display: flex;
    align-items: center;
    justify-content: center;
}

.team_page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #f7f7f7;
    z-index: 10;
    overflow: scroll;
}

.team_page .list_t {
    padding: 20rpx 40rpx;
    background: #fff;
    display: flex;
}

.team_page .list_t+.list_t {
    border-top: #ddd 2rpx solid;
}

.team_page .list_t>icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
}

.team_page .list_t>view:nth-child(1) {
    flex: 1;
    width: 180rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.store_page {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: #f7f7f7;
    z-index: 10;
    overflow: scroll;
}

.store_page .item+.item {
    margin-top: 10rpx;
}

.store_page .item {
    background: #fff;
}

.store_page .item .item_t {
    display: flex;
    padding: 20rpx 30rpx;
    background: #fff;
    border-radius: 20rpx 20rpx 0 0;
}

.store_page .item .item_t>image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 100%;
}

.store_page .item .item_t .item_l {
    flex: 1;
    width: 450rpx;
    box-sizing: border-box;
    padding-left: 20rpx;
}

.store_page .item .item_t .item_l>view {
    width: 450rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    color: #999;
    line-height: 4vw;
}

.store_page .item .item_t .item_l>view:nth-child(1) {
    color: #333;
    font-size: 4vw;
    margin-bottom: 10rpx;
}

.store_page .item .item_t .item_r {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    line-height: 4vw;
    color: #999;
    border-left: #f3a7bf 2rpx dashed;
    padding-left: 20rpx;
    width: 100rpx;
    box-sizing: border-box;
}