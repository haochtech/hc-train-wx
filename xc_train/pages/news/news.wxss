.list {
    padding: 0 30rpx;
    background: #fff;
}

.list .title {
    border-bottom: #ddd 2rpx solid;
    color: #868686;
}

.list .title>view {
    padding: 20rpx 0 6rpx;
    border-bottom: #5fcced 4rpx solid;
    width: 120rpx;
}

.list .item {
    padding: 20rpx 0;
    display: flex;
}

.list .item+.item {
    border-top: #ddd 2rpx solid;
}

.list .item>image {
    width: 180rpx;
    height: 150rpx;
    border-radius: 20rpx;
}

.list .item .item_r {
    width: 490rpx;
    margin-left: 20rpx;
}

.list .item .item_r>view:nth-child(1) {
    color: #444444;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .item_r>view:nth-child(2) {
    font-size: 3vw;
    color: #444444;
    line-height: 4vw;
    height: 60rpx;
    display: -webkit-box;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
    overflow: hidden;
    margin-top: 6rpx;
}

.list .item_r .item_b {
    color: #cccccc;
    display: flex;
    margin-top: 6rpx;
}

.list .item_r .item_b>view:nth-child(1) {
    flex: 1;
}

.list .item_r .item_b>view:nth-child(2) {
    color: #afe5f6;
}