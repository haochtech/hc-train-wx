.list {
    background: #fff;
    padding: 0 30rpx;
}

.list .title {
    padding: 20rpx 0;
    text-align: center;
    border-bottom: #ddd 2rpx solid;
}

.list .title>view:nth-child(1) {
    font-size: 4.5vw;
    color: #444;
}

.list .title>view:nth-child(2) {
    color: #ccc;
    margin-top: 10rpx;
}

.list>image {
    width: 100%;
}

.list .text {
    padding: 10rpx 0;
    text-indent: 2em;
    color: #878787;
}