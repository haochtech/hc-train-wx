.addressCont1 {
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 28rpx;
    color: #77D4C0;
    margin-bottom: 5rpx;
}

.addressCont2 {
}

.addressCont2 .listBox {
    margin-bottom: 5rpx;
}

.addressCont2 .listBox .box1 {
    padding: 20rpx 30rpx;
    border-bottom: 2rpx solid #f7f7f7;
}

.addressCont2 .listBox .box1 .sexicon {
    width: 48rpx;
    height: 56rpx;
    margin-right: 20rpx;
}

.addressCont2 .listBox .box1 .text {
    overflow: hidden;
}

.addressCont2 .listBox .box1 .text .h1 {
    line-height: 1.2;
    font-size: 26rpx;
    color: #868686;
    margin-bottom: 15rpx;
}

.addressCont2 .listBox .box1 .text .h1 .flex-flex1 {
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.addressCont2 .listBox .box1 .text .p {
    font-size: 22rpx;
    color: #999;
    line-height: 1.2;
}

.addressCont2 .listBox .box2 {
    padding: 20rpx 30rpx;
}

.addressCont2 .listBox .box2 label {
    font-size: 24rpx;
    color: #878787;
    overflow: hidden;
}

.addressCont2 .listBox .box2 label.curr {
    color: #FFD161;
}

.addressCont2 .listBox .box2 label radio {
    display: none;
}

.addressCont2 .listBox .box2 label .icon {
    width: 24rpx;
    height: 24rpx;
    margin-right: 20rpx;
}

.addressCont2 .listBox .box2 label .check {
    display: inline-block;
}

.addressCont2 .listBox .box2 label .checked {
    display: none;
}

.addressCont2 .listBox .box2 label.curr .check {
    display: none;
}

.addressCont2 .listBox .box2 label.curr .checked {
    display: inline-block;
}

.addressCont2 .listBox .box2 .btn {
    padding: 0 20rpx;
    font-size: 24rpx;
    color: #999;
}

.addressCont2 .listBox .box2 .btn+.btn {
    border-left: 1px solid #ccc;
}

.shade {
    position: fixed;
    width: 100%;
    height: 100%;
    left: 0;
    top: 0;
    background-color: rgba(0,0,0,0.5);
    z-index: 50;
}

.newAddr {
    position: fixed;
    width: 580rpx;
    box-sizing: border-box;
    padding: 20rpx 80rpx;
    left: 50%;
    margin-left: -290rpx;
    top: 50%;
    transform: translateY(-50%);
    border-radius: 10rpx;
}

.newAddr .inputBlock {
    padding: 15rpx 0;
    border-bottom: 2rpx solid #f7f7f7;
}

.newAddr .inputBlock .input {
    overflow: hidden;
}

.newAddr .inputBlock .input input {
    width: 100%;
    text-align: center;
    font-size: 26rpx;
    height: 40rpx;
    line-height: 40rpx;
    color: #666;
}

.newAddr .inputBlock .radio {
    font-size: 3.5vw;
    display: flex;
    align-items: center;
}

.newAddr .inputBlock .radio text {
    padding: 0 20rpx;
}

.newAddr .inputBlock .radio:first-child {
    text-align: right;
}

.newAddr .inputBlock .radio image {
    display: none;
    width: 48rpx;
    height: 56rpx;
}

.newAddr .inputBlock .radio image.curr {
    display: inline-block;
}

.newAddr .inputBlock .text {
    width: 130rpx;
    font-size: 26rpx;
    color: #ccc;
    text-align: center;
}

.newAddr .inputBlock .text input {
    display: none;
}

.newAddr .inputBlock .localbtn {
    width: 36rpx;
    height: 36rpx;
    padding: 10rpx 15rpx;
}

.newAddr .btnBlock {
    margin-top: 35rpx;
}

.newAddr .btnBlock button {
    background-color: #77D4C0;
    color: #fff;
    font-size: 32rpx;
    height: 64rpx;
    line-height: 64rpx;
}

.newAddr .btnBlock button::after {
    border: none;
}

.newAddr .closeBtn {
    position: absolute;
    right: 20rpx;
    top: 20rpx;
    width: 40rpx;
    height: 40rpx;
}

.flex-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.flex-wrap {
    -webkit-box-flex-wrap: wrap;
    flex-wrap: wrap;
}

.flex-alignC {
    -webkit-box-align: center;
    align-items: center;
    -ms-flex-align: center;
}

.flex-flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-flex2 {
    -webkit-box-flex: 2;
    flex: 2;
}