.page .banner {
    width: 100%;
    height: 320rpx;
    position: relative;
}

.page .banner image {
    width: 100%;
    height: 100%;
    display: block;
}

.page .announcement {
    display: flex;
    padding: 10rpx 20rpx;
    background: #fff;
    color: #0192c6;
    flex-direction: row;
    align-items: center;
}

.page .announcement>image {
    width: 40rpx;
    display: block;
    margin-right: 10rpx;
}

.page .announcement .box {
    width: 100%;
    height: 40rpx;
    flex: 1;
    overflow: hidden;
}

.page .announcement .box>view {
    padding-left: 20rpx;
    display: inline-block;
    white-space: nowrap;
    animation: 20s wordsLoop linear infinite normal;
}

.page .announcement .box>view text {
    margin-left: 40rpx;
}

@keyframes wordsLoop {
    0% {
        transform: translateX(600rpx);
    }

    100% {
        transform: translateX(-100%);
    }
}

@-webkit-keyframes wordsLoop {
    0% {
        transform: translateX(600rpx);
    }

    100% {
        transform: translateX(-100%);
    }
}

.page .announcement swiper {
    width: 100%;
    height: 40rpx;
}

.page .announcement swiper view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
    height: auto;
}

.page .nav {
    margin-top: 10rpx;
    padding: 10rpx 20rpx;
    background: #fff;
    overflow: hidden;
}

.page .nav .item {
    width: 25%;
    float: left;
    padding: 10rpx 0;
    text-align: center;
    color: #777;
    line-height: 6vw;
}

.page .nav .item>image {
    width: 100rpx;
    height: 100rpx;
    display: block;
    margin: 0 auto;
}

.page .nav2 {
    margin-top: 10rpx;
    overflow: hidden;
}

.page .nav2 .item {
    width: 49.5vw;
    float: left;
    height: 130rpx;
}

.page .nav2 .item+.item {
    margin-left: 1vw;
}

.page .nav2 .item>image {
    width: 100%;
    height: 100%;
}

.page .list {
    margin-top: 10rpx;
}

.page .list .title {
    background: #fff;
    height: 80rpx;
    position: relative;
}

.page .list .title .line {
    height: 2rpx;
    background: #ddd;
    width: 320rpx;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
}

.page .list .title .text {
    width: 160rpx;
    background: #fff;
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    text-align: center;
    color: #777;
}

.page .list .item {
    background: #fff;
    padding: 10rpx 20rpx;
    position: relative;
}

.page .list .item+.item {
    margin-top: 6rpx;
}

.page .list .item>image {
    width: 100%;
    height: 300rpx;
}

.page .list .item .info {
    position: absolute;
    bottom: 10rpx;
    left: 20rpx;
    background: rgba(0,0,0,0.5);
    width: 710rpx;
    color: #fff;
    box-sizing: border-box;
    padding: 10rpx 20rpx;
}

.page .list .item .info .info_t {
    width: 670rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.page .list .item .info .info_b {
    display: flex;
}

.page .list .item .info .info_b>view:nth-child(1) {
    flex: 1;
}

.page .list .item .info .info_b>view:nth-child(2) {
    color: #faff24;
}

.copyright {
    color: #ccc;
    font-size: 3.5vw;
    text-align: center;
    padding: 10rpx;
}

.ad {
    position: fixed;
    top: 10vh;
    width: 80%;
    left: 10%;
    z-index: 100000;
}

.ad>image {
    width: 100%;
}

.list2 {
    background: #fff;
    overflow: hidden;
}

.list2 .listBox {
    margin-bottom: 10rpx;
    width: 340rpx;
    padding: 25rpx 10rpx 15rpx 25rpx;
}

.list2 .listBox:nth-of-type(2n) {
    padding: 25rpx 25rpx 15rpx 10rpx;
}

.list2 .listBox .imgBlock {
    position: relative;
    width: 340rpx;
    height: 288rpx;
    margin-bottom: 10rpx;
}

.list2 .listBox .imgBlock .tags {
    position: absolute;
    left: 5rpx;
    top: 0;
}

.list2 .listBox .imgBlock .tag {
    display: inline-block;
    width: 54rpx;
    height: 54rpx;
    text-align: center;
    line-height: 46rpx;
    color: #fff;
    font-size: 28rpx;
    border-radius: 0 0 27rpx 27rpx;
    margin-right: 5rpx;
}

.list2 .listBox .imgBlock .tag.bg1 {
    background-color: #FF8000;
}

.list2 .listBox .imgBlock .tag.bg2 {
    background-color: #FCC601;
}

.list2 .listBox .imgBlock .tag.bg3 {
    background-color: #77D4C0;
}

.list2 .listBox image {
    vertical-align: bottom;
    width: 100%;
    height: 100%;
}

.list2 .listBox .h1 {
    font-size: 28rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin-bottom: 15rpx;
}

.list2 .listBox .p {
    font-size: 20rpx;
    color: #999;
    padding-bottom: 10rpx;
    border-bottom: 1px dotted #dcdcdc;
    margin-bottom: 15rpx;
}

.list2 .listBox .p .sp1 {
    color: #77D2BF;
}

.list2 .listBox .info {
    font-size: 30rpx;
    color: #77D3BF;
}

.list2 .listBox .info .btn {
    width: 134rpx;
    height: 48rpx;
    line-height: 48rpx;
    text-align: center;
    border-radius: 24rpx;
    background-color: #77D4C0;
    font-size: 26rpx;
    color: #fff;
}

.flex-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.flex-wrap {
    -webkit-box-flex-wrap: wrap;
    flex-wrap: wrap;
}

.flex-alignC {
    -webkit-box-align: center;
    align-items: center;
    -ms-flex-align: center;
}

.flex-flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-flex2 {
    -webkit-box-flex: 2;
    flex: 2;
}

.fl {
    float: left;
}