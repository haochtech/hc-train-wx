.flex-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.flex-wrap {
    -webkit-box-flex-wrap: wrap;
    flex-wrap: wrap;
}

.flex-alignC {
    -webkit-box-align: center;
    align-items: center;
    -ms-flex-align: center;
}

.flex-flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-flex2 {
    -webkit-box-flex: 2;
    flex: 2;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.body image {
    width: 100%;
    height: 100%;
}

.otgdCont1 {
    text-align: center;
    padding: 20rpx 0;
    margin-bottom: 20rpx;
}

.otgdCont1 icon {
    margin-bottom: 20rpx;
}

.otgdCont1 .h1 {
    margin-bottom: 35rpx;
    font-size: 36rpx;
}

.otgdCont1 .h2 {
    margin-bottom: 50rpx;
    font-size: 26rpx;
    color: #999;
}

.otgdCont1 .btn {
    display: block;
    width: 680rpx;
    height: 80rpx;
    line-height: 80rpx;
    border-radius: 10rpx;
    border: 1px solid transparent;
    margin: 0 auto 20rpx;
    font-size: 30rpx;
}

.otgdCont1 .btn1 {
    background-color: #77d4c0;
    border-color: #77d4c0;
    color: #fff;
}

.otgdCont1 .btn2 {
    border-color: #dcdcdc;
}

.otgdCont1 .btn button {
    display: none;
}

.otgdCont2 {
    padding: 0 30rpx;
}

.otgdCont2 .imgs {
    text-align: center;
    padding: 20rpx 0 1rpx;
}

.otgdCont2 .imgs .imgBlock {
    display: inline-block;
    width: 110rpx;
    height: 110rpx;
    border: 2rpx solid #77d4c0;
    border-radius: 50%;
    position: relative;
    margin: 0 15rpx 20rpx;
    vertical-align: middle;
}

.otgdCont2 .imgs .imgBlock image {
    border-radius: 50%;
}

.otgdCont2 .imgs .imgBlock .tag {
    width: 76rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    background-color: #77d4c0;
    border-radius: 15rpx;
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    margin-left: -38rpx;
}

.otgdCont2 .imgs .noimgBlock {
    display: inline-block;
    width: 110rpx;
    height: 110rpx;
    line-height: 110rpx;
    border: 2rpx dashed #77d4c0;
    border-radius: 50%;
    margin: 0 15rpx 20rpx;
    font-size: 50rpx;
    color: #77d4c0;
    vertical-align: middle;
}

.otgdCont2 .listBlock {
    padding: 30rpx 0;
    border-top: 1px solid #ededed;
    font-size: 28rpx;
}

.otgdCont2 .listBlock .name {
}

.otgdCont2 .listBlock .text {
    font-size: 26rpx;
    color: #999;
}