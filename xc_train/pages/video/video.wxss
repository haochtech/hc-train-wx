.nav {
    height: 90rpx;
    background: #fff;
    white-space: nowrap;
    position: fixed;
    left: 0;
    top: 0;
    min-width: 100%;
    z-index: 999;
}

.nav view {
    min-width: 14%;
    display: inline-block;
    line-height: 90rpx;
    height: 90rpx;
    box-sizing: border-box;
    text-align: center;
    margin: 0 3%;
}

.nav view.curr {
    border-bottom: #5fccec 4rpx solid;
    color: #5fccec;
}

.nav_block {
    height: 90rpx;
}

.list .item {
    background: #fff;
    margin-top: 10rpx;
    position: relative;
}

.list .item .video {
    position: relative;
}

.list .item .video>image:nth-child(2) {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%,-50%);
    width: 80rpx;
    height: 80rpx;
}

.list .item .video>image:nth-child(1) {
    width: 100%;
    height: 320rpx;
}

.list .item .item_btn {
    padding: 20rpx 30rpx;
}

.list .item .item_btn .item_t {
    display: flex;
    align-items: center;
    font-size: 4vw;
}

.list .item .item_btn .item_t>view:nth-child(1) {
    flex: 1;
    color: #000;
    width: 560rpx;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .item_btn .item_t>view:nth-child(2) {
    height: 50rpx;
    width: 140rpx;
    display: flex;
    color: #fff;
    align-items: center;
    justify-content: center;
    background: #5fcceb;
    border-radius: 8rpx;
}

.list .item_btn .item_b {
    display: flex;
    margin-top: 10rpx;
    color: #999;
}

.list .item_btn .item_b>view:nth-child(1) {
    width: 320rpx;
}

.list .item_btn .item_b>view:nth-child(2),.page .item_btn .item_b>view:nth-child(3) {
    flex: 1;
}

.list .item_btn .item_b>view:nth-child(3) {
    text-align: right;
}

.shop_box {
    position: fixed;
    width: 80%;
    top: 20%;
    left: 10%;
    z-index: 9999;
    background: #fff;
    text-align: center;
    padding: 40rpx 20rpx;
    border-radius: 20rpx;
    box-sizing: border-box;
}

.shop_box>image {
    width: 150rpx;
    height: 150rpx;
    border-radius: 100%;
    border: #ff4c60 4rpx solid;
    display: inline-block;
}

.shop_box>view:nth-child(2) {
    margin-top: 20rpx;
}

.shop_box>input {
    border: #ddd 2rpx solid;
    display: inline-block;
    width: 50vw;
    border-radius: 40rpx;
    margin-top: 20rpx;
    padding: 10rpx 20rpx;
}

.shop_box>.shop_btn {
    background: #31c37c;
    display: inline-block;
    width: 50vw;
    padding: 10rpx 20rpx;
    border-radius: 40rpx;
    margin-top: 20rpx;
    height: 1.4rem;
    line-height: 1.4rem;
    color: #fff;
    border: #31c37c 2rpx solid;
}

.page.theme2 .shop_box>.shop_btn {
    background: #cfa35c;
    border: #cfa35c 2rpx solid;
}

.shop_box>.shop_error {
    font-size: 3.5vw;
    color: #ffad5b;
}

.shop_box .shop_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}