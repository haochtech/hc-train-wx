.flex-display {
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
}

.flex-wrap {
    -webkit-box-flex-wrap: wrap;
    flex-wrap: wrap;
}

.flex-alignC {
    -webkit-box-align: center;
    align-items: center;
    -ms-flex-align: center;
}

.flex-flex1 {
    -webkit-box-flex: 1;
    flex: 1;
}

.flex-flex2 {
    -webkit-box-flex: 2;
    flex: 2;
}

.fl {
    float: left;
}

.fr {
    float: right;
}

.body image {
    width: 100%;
    height: 100%;
}

.sharedCont1 {
    margin-bottom: 5rpx;
    padding: 30rpx;
}

.sharedCont1 image {
    width: 240rpx;
    height: 240rpx;
    margin-right: 30rpx;
}

.sharedCont1 .text {
    overflow: hidden;
}

.sharedCont1 .text .h1 {
    font-size: 30rpx;
    line-height: 40rpx;
    height: 120rpx;
    overflow: hidden;
    margin-bottom: 30rpx;
}

.sharedCont1 .text .h2 {
    font-size: 26rpx;
    color: #999;
    margin-bottom: 30rpx;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.sharedCont1 .text .p {
    font-size: 26rpx;
    color: #999;
    overflow: hidden;
    white-space: nowrap;
    text-overflow: ellipsis;
}

.sharedCont1 .text .p .sp1 {
    font-size: 36rpx;
    color: #77d4c0;
}

.sharedCont2 {
    padding: 30rpx 30rpx 0;
    text-align: center;
}

.sharedCont2 .imgs {
    text-align: center;
    margin-bottom: 30rpx;
}

.sharedCont2 .imgs .imgBlock {
    display: inline-block;
    width: 110rpx;
    height: 110rpx;
    border: 2rpx solid #77d4c0;
    border-radius: 50%;
    position: relative;
    margin: 0 15rpx 20rpx;
    vertical-align: middle;
}

.sharedCont2 .imgs .imgBlock image {
    border-radius: 50%;
}

.sharedCont2 .imgs .imgBlock .tag {
    width: 76rpx;
    height: 30rpx;
    line-height: 30rpx;
    text-align: center;
    background-color: #77d4c0;
    border-radius: 15rpx;
    font-size: 20rpx;
    color: #fff;
    position: absolute;
    bottom: -10rpx;
    left: 50%;
    margin-left: -38rpx;
}

.sharedCont2 .imgs .noimgBlock {
    display: inline-block;
    width: 110rpx;
    height: 110rpx;
    line-height: 110rpx;
    border: 2rpx dashed #77d4c0;
    border-radius: 50%;
    margin: 0 15rpx 20rpx;
    font-size: 50rpx;
    color: #77d4c0;
    vertical-align: middle;
}

.sharedCont2 .h1 {
    font-size: 32rpx;
    margin-bottom: 30rpx;
    display: flex;
    justify-content: center;
}

.sharedCont2 .h1 .sp1 {
    color: #77d4c0;
}

.sharedCont2 .h1 icon {
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 10rpx;
}

.sharedCont2 .btn {
    height: 80rpx;
    display: block;
    line-height: 80rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: #77d4c0;
    font-size: 30rpx;
    color: #fff;
    margin-bottom: 30rpx;
}

.sharedCont2 .listBlock {
    padding: 30rpx 0;
    border-top: 1px solid #ededed;
    font-size: 28rpx;
}

.sharedCont2 .listBlock .name {
    text-align: left;
}

.sharedCont2 .listBlock .text {
    font-size: 26rpx;
    color: #999;
}

.otherList {
    border-radius: 10rpx;
    padding: 30rpx;
}

.otherList .title {
    margin-bottom: 30rpx;
}

.otherList .title .border {
    width: 90rpx;
    height: 1px;
    background-color: #77d4c0;
}

.otherList .title .text {
    width: 250rpx;
    text-align: center;
    font-size: 26rpx;
    color: #77d4c0;
}

.otherList .lb {
    padding: 20rpx 0;
    border-bottom: 1px solid #e3eae9;
}

.otherList .lb:last-child {
    border-bottom: none;
}

.otherList .lb image {
    width: 90rpx;
    height: 90rpx;
    border-radius: 50%;
}

.otherList .lb .name {
    overflow: hidden;
    line-height: 1.3;
    font-size: 26rpx;
    white-space: nowrap;
    text-overflow: ellipsis;
    margin: 0 15rpx;
    text-align: left;
}

.otherList .lb .info {
    text-align: right;
    font-size: 22rpx;
    color: #999;
    line-height: 32rpx;
}

.otherList .lb .obtn {
    margin-left: 15rpx;
    width: 126rpx;
    height: 52rpx;
    line-height: 52rpx;
    text-align: center;
    border-radius: 10rpx;
    background-color: #77d4c0;
    font-size: 26rpx;
    color: #fff;
}

.shade {
    position: fixed;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    z-index: 100;
}

.buyLayer {
    background-color: #fff;
    position: fixed;
    width: 100%;
    left: 0;
    bottom: 102rpx;
    box-sizing: border-box;
}

.buyLayer .box1 {
    padding: 30rpx;
    position: relative;
    border-bottom: 1px solid #ededed;
    margin: 0 30rpx;
}

.buyLayer .box1 .imgBlock {
    width: 210rpx;
    height: 210rpx;
    border: 1px solid #fff;
    border-radius: 10rpx;
    margin-top: -110rpx;
    margin-right: 30rpx;
    box-shadow: 1px 1px 3px #aaa;
}

.buyLayer .box1 .imgBlock image {
    border-radius: 10rpx;
}

.buyLayer .box1 .text {
    overflow: hidden;
    line-height: 1.3;
}

.buyLayer .box1 .text .h1 {
    font-size: 36rpx;
    color: #77d4c0;
    margin-bottom: 15rpx;
}

.buyLayer .box1 .text .p {
    font-size: 26rpx;
}

.buyLayer .box1 .closeBtn {
    position: absolute;
    width: 40rpx;
    height: 40rpx;
    right: 0;
    top: 20rpx;
}

.buyLayer .box2 {
    padding: 30rpx;
}

.buyLayer .box2 .inputBlock {
}

.buyLayer .box2 .inputBlock .name {
    width: 3em;
    font-size: 26rpx;
    color: #999;
    line-height: 50rpx;
}

.buyLayer .box2 .inputBlock .input {
    overflow: hidden;
}

.buyLayer .box2 .inputBlock .radioBox {
    display: inline-block;
    font-size: 28rpx;
    color: #999;
    height: 50rpx;
    line-height: 50rpx;
    border: 1px solid #999;
    padding: 0 30rpx;
    border-radius: 25rpx;
    margin: 0 15rpx 30rpx 0;
}

.buyLayer .box2 .inputBlock .radioBox.curr {
    color: #77D3BF;
    border-color: #77D3BF;
}

.buyLayer .box2 .inputBlock .radioBox radio {
    display: none;
}

.buyLayer .box2 .inputBlock .numBlock {
    height: 60rpx;
    line-height: 60rpx;
    text-align: center;
    font-size: 30rpx;
    border: 1px solid #999;
    border-radius: 10rpx;
}

.buyLayer .box2 .inputBlock .numBlock .nbtn {
    width: 60rpx;
    height: 60rpx;
    color: #999;
}

.buyLayer .box2 .inputBlock .numBlock .input {
    height: 50rpx;
    overflow: hidden;
    padding: 5rpx 0;
    border-left: 1px solid #999;
    border-right: 1px solid #999;
}

.buyLayer .box2 .inputBlock .numBlock .input input {
    height: 50rpx;
    vertical-align: top;
    padding: 0;
    width: 70rpx;
    color: #77D4C0;
}

.buyLayer .btn {
    display: block;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 30rpx;
    color: #fff;
    background-color: #77d4c0;
}