.page .list {
    background: #fff;
    padding: 0 20rpx;
}

.page .item {
    display: flex;
    padding: 20rpx 0;
}

.page .item+.item {
    border-top: #ddd 2rpx solid;
}

.page .item .bimg {
    width: 160rpx;
    height: 160rpx;
}

.page .item .item_r {
    width: 530rpx;
    margin-left: 20rpx;
}

.page .item .item_r>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.page .item .item_r>view:nth-child(2) {
    font-size: 3vw;
    color: #999;
}

.page .item .item_r .code {
    display: flex;
    align-items: center;
}

.page .item .item_r .code>image {
    width: 30rpx;
    height: 30rpx;
}

.page .item .item_r .code>view:nth-child(2) {
    margin-left: 10rpx;
    color: #e9bd8e;
}

.page .item .item_r .item_btn {
    display: flex;
}

.page .item .item_r .item_btn>view:nth-child(1) {
    flex: 1;
}

.menu {
    position: fixed;
    width: 70vw;
    top: 20vw;
    left: 15vw;
    background: #fff;
    z-index: 1000;
    box-sizing: border-box;
    padding: 50rpx;
    border-radius: 20rpx;
}

.menu .title {
    text-align: center;
    padding: 20rpx 0;
    font-size: 4vw;
}

.menu .code {
    width: 320rpx;
    height: 320rpx;
    margin: 30rpx auto;
}

.menu .code>canvas {
    width: 100%;
    height: 100%;
    border: #ddd 2rpx solid;
}

.menu .menu_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}