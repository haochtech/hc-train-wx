.list {
    padding-top: 10rpx;
    box-sizing: border-box;
}

.list .item {
    background: #fff;
    padding: 0 30rpx;
    font-size: 3vw;
}

.list .item+.item {
    border-top: #f7f7f7 4rpx solid;
}

.list .item .item_t {
    padding: 20rpx 0;
    display: flex;
}

.list .item .item_l {
    flex: 1;
    width: 180rpx;
}

.list .item .item_l>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .item_r {
    flex: 1;
    width: 180rpx;
}

.list .item .item_r>view {
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}

.list .item .item_b {
    display: flex;
    padding: 20rpx 0;
    border-top: #ddd 2rpx solid;
    align-items: center;
}

.list .item .item_b>image {
    width: 30rpx;
    height: 30rpx;
}

.list .item .item_b>view:nth-child(2) {
    margin-left: 10rpx;
    color: #e9bd8e;
}

.list .item .item_b>view:nth-child(3) {
    flex: 1;
    text-align: right;
    display: flex;
    justify-content: flex-end;
}

.list .item .item_b .item_bb view+view {
    margin-left: 10rpx;
}

.menu {
    position: fixed;
    width: 70vw;
    top: 20vw;
    left: 15vw;
    background: #fff;
    z-index: 1000;
    box-sizing: border-box;
    padding: 50rpx;
    border-radius: 20rpx;
}

.menu .title {
    text-align: center;
    padding: 20rpx 0;
    font-size: 4vw;
}

.menu .code {
    width: 320rpx;
    height: 320rpx;
    margin: 30rpx auto;
}

.menu .code>canvas {
    width: 100%;
    height: 100%;
}

.menu .menu_close {
    position: absolute;
    top: 20rpx;
    right: 20rpx;
}

.menu .content {
    max-height: 50vh;
    overflow: scroll;
    color: #B7B7B7;
}

.menu .content>view {
    padding: 20rpx 0;
    border-bottom: #ddd 2rpx solid;
}